

<div class = "row">
  <div class = "col-4">
    <div class = "title"><h1>Feed-Me Fridge</h1></div>
    <div>
      <img class = "fridge-logo" src="https://www.applianceservices.co.nz/sites/applianceservices.co.nz/files/refrigerator-fridge-freezer.png" width = 200>
    </div>
  </div>
  <div class= "col-8">
    <h3>What ingredients have you got?</h3>
    
    <form action="/option" method="post"> 
      <select name="id" multiple>
        {{#each ing}} 
        <p>Ingredients: <option value="{{id}}">{{name}}</option></p>
        {{/each}}
      </select>

      <input type="submit" value="Feed Me!">
      
    </form>
  </div>

